<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update_alumno">

    <EditText
        android:id="@+id/Enombre"
        android:layout_width="266dp"
        android:layout_height="69dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="184dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Introduce el nombre del alumno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Ecurso"
        android:layout_width="262dp"
        android:layout_height="83dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Introduce el nuevo curso"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Enombre" />

    <Button
        android:id="@+id/BTUpdate"
        android:layout_width="245dp"
        android:layout_height="76dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="112dp"
        android:text="Actualizar curso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ecurso" />
</androidx.constraintlayout.widget.ConstraintLayout>