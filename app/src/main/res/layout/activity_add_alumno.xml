<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".anadir_alumno">

    <EditText
        android:id="@+id/Enombre"
        android:layout_width="267dp"
        android:layout_height="47dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="Escribe un nombre"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Eapellido"
        android:layout_width="267dp"
        android:layout_height="77dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Escribe un apellido"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Enombre" />

    <EditText
        android:id="@+id/Ecurso"
        android:layout_width="269dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Escribe un curso"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Eapellido" />

    <Button
        android:id="@+id/BTAnadir"
        android:layout_width="265dp"
        android:layout_height="72dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="60dp"
        android:text="AÃ±adir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ecurso" />
</androidx.constraintlayout.widget.ConstraintLayout>